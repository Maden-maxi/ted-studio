body
	overflow-x hidden
	&.overflow-hidden
		overflow hidden

img
	max-width 100%

/*--------fons----------*/
@font-face
	font-family "SourceSansProRegular"
	src url('../fonts/SourceSansProRegular.eot')
	src url('../fonts/SourceSansProRegular.woff')
	src url('../fonts/SourceSansProRegular.ttf')
@font-face
	font-family "SourceSansProBold"
	src url('../fonts/SourceSansProBold.eot')
	src url('../fonts/SourceSansProBold.woff')
	src url('../fonts/SourceSansProBold.ttf')

sspr="SourceSansProRegular"
sspb="SourceSansProBold"
.cd-container
	width 90%
	max-width 1200px
	margin 0 auto
	&::after
		content ''
		display table
		clear both

@media only screen and (min-width: 768px)
	main.slide-out
		transform translateX(-600px)

@media screen and (min-width: 1200px)
	main.slide-out
		transform translateX(-800px)
main
	position relative
	z-index 2
	transition-property transform
	transition-duration 0.3s
	&.slide-out
		transform translateX(-270px)
	&.slide-out .cd-overlay
		display block
		animation cd-fade-in 0.3s

.cd-section
	padding 2em 0
	text-align center
	.cd-container
		max-width 768px

	h2
		font-family sspr, "Droid Sans", sans-serif
		font-weight bold
		text-transform uppercase
		margin 20px 0
		font-size 30px
	p
		line-height 1.4
@media only screen and (min-width: 768px)
	.cd-section
		padding 0
		p
		line-height 1.6
@media only screen and (min-width: 1200px)
	.cd-section
		padding 0
		h2
			margin-bottom 1em
		p
			line-height 1.8
			font-size 18px
			font-size 1.125rem



.cd-placeholder-1
	background #f25f5c
	color #fdeaea
.cd-placeholder-2
	background #FFF
#cd-team li:hover
	box-shadow 0 0 10px rgba(92, 75, 81, 0.3)
	.cd-img-overlay
		opacity 1

#cd-team
	background transparent
	.cd-container
		max-width 1200px
	h2
		color #000
	li
		margin-bottom 2em
		border-radius 0.25em
		box-shadow 0 0 10px rgba(92, 75, 81, 0)
		transition all 0.3s
		a
			cursor pointer
	figure
		position relative
		img
			display block
			width 100%
			border-radius .25em .25em 0 0
	.cd-img-overlay
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background rgba(59, 83, 98, 0.55)
		opacity 0
		border-radius .25em .25em 0 0
		transition opacity 0.6s
		span
			position absolute
			left 50%
			top 50%
			bottom auto
			right auto
			font-family sspr,"Droid Sans", sans-serif
			transform translateX(-50%) translateY(-50%)
			color #FFF
	.cd-member-info
		height 80px
		color #fff
		background #3B5362
		text-align center
		font-family sspb,"Droid Sans", sans-serif
		font-weight bold
		padding-top 20px
		border-radius 0 0 .25em .25em
		span
			display block
			font-family sspr,"Droid Serif", serif
			font-weight normal
			color #999999
			font-size 14px
			font-size 0.875rem
			margin-top .5em
@media only screen and (min-width: 768px)
	#cd-team li
		width 31%
		float left
		margin-right 3.5%
		&:nth-child(3n)
			margin-right 0

.no-cssgradients .cd-member-bio .cd-member-bio-pict::after
	display none
.cd-member-bio
	position fixed
	top 0
	right 0
	width 270px
	height 100%
	overflow-y auto
	-webkit-overflow-scrolling touch
	background #3b5362
	z-index 1
	transform translateX(270px)
	transition: transform 0.3s
	&.slide-in
		transform translateX(0)
		z-index 2
	.cd-member-bio-pict
		position relative
		&::after
			
			content ''
			position absolute
			bottom 0
			left 0
			width 100%
			height 80px
			background linear-gradient(to top, #3b5362, rgba(92, 75, 81, 0))
	img
		width 100%
		display block
	.cd-bio-content
		padding 1em
		color #FFF
		h1
			font-family sspb,"Droid Serif", serif
			font-weight bold
			text-transform uppercase
			text-align center
			font-size 20px
			font-size 1.25rem
		p
			font-family sspr,"Droid Serif", serif
			font-size 14px
			font-size 0.875rem
			margin 1em 0
			line-height 1.4
			color #d7cfd2
@media only screen and (min-width: 768px)
	.cd-member-bio
		width 600px
		transform translateX(600px)
		.cd-bio-content
			padding 2em
			p
				line-height 1.6
				margin 2em 0
@media only screen and (min-width: 1200px)
	.cd-member-bio
		width 800px
		transform translateX(800px)
		.cd-member-bio-pict::after
			height 150px
		.cd-bio-content
			padding 4em
			transform translateY(-80px)
			h1
				font-size 40px
				font-size 2.5rem
			p
				font-size 16px
				font-size 1rem
	.no-cssgradients .cd-member-bio .cd-bio-content
		transform translateY(0)

.cd-member-bio-close
	width 32px
	height 32px
	overflow hidden
	position fixed
	top 10px
	right 10px
	background url("../img/reviews/cd-icon-close.svg") no-repeat center center
	text-indent 100%
	white-space nowrap
	z-index 3
	display none
	cursor pointer
	transition all .3s
	&:hover
		transform scale(1.1, 1.1)
	&.is-visible
		display block
		animation cd-move-in 0.8s
@media only screen and (min-width: 1200px)
	.cd-member-bio-close
		right 20px
		top 20px
	
.cd-overlay
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background transparent
	cursor pointer
	display none
@keyframes cd-move-in
	0%
		transform translateX(100px)
	100%
		transform translateX(0)
@keyframes cd-fade-in
	0%
		opacity 0
	100%
		opacity 1