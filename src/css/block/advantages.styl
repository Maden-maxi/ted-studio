.advantages
	display flex
	flex-flow row wrap
	&__left
		flex 1
		min-width 320px
		background transparent url(../img/city.png) 0 0 no-repeat
		background-size cover
		display flex
		flex-flow column
		align-items stretch
		&-title
			margin auto 0
			font 2.25rem regular,Arial,sans-serif
			text-align center
			@extend .txt-transform
			color def-text-color
			padding 20px 0
			background rgba(199,65,65,0.70)
	&__right
		flex 1
		min-width 320px
		background-color brand-color
		padding 20px
		&-title
			font 1.875rem bold,Arial,sans-serif
			text-transform uppercase
			text-align center
			color def-text-color
			margin 20px 0